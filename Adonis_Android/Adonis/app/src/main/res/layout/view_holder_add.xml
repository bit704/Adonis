<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/add_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/button_add">

        <ImageView
            android:id="@+id/add_avatar"
            android:layout_width="@dimen/add_avatar"
            android:layout_height="@dimen/add_avatar"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:contentDescription="@string/avatar"
            android:src="@mipmap/ic_launcher">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_nickname"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_nickname"
                android:maxLines="1">
            </TextView>

            <TextView
                android:id="@+id/add_id"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_id"
                android:maxLines="1">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_add"
        android:text="@string/add"
        android:layout_width="@dimen/add_button_width"
        android:layout_height="@dimen/add_button_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin"
        android:contentDescription="@string/add">
    </Button>

</RelativeLayout>